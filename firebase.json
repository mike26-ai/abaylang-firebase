
{
  "hosting": {
    "public": ".next", 
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/_next/static/**",
        "destination": "/_next/static/**"
      },
      {
        "source": "/static/**",
        "destination": "/static/**"
      },
      {
        "source": "/favicon.ico",
        "destination": "/favicon.ico" 
      },
      {
        "source": "/manifest.json",
        "destination": "/manifest.json" 
      },
      {
        "source": "/icon-*.png",
        "destination": "/icon-*.png"
      },
      {
        "source": "**",
        "function": "server" 
      }
    ],
    "headers": [
      {
        "source": "/_next/static/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "/static/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  }
}
