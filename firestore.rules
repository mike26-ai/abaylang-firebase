rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin role
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Users Collection
    // - Authenticated users can create their own profile.
    // - Users can only read/update their own profile.
    // - Admins can read/write any user profile.
    match /users/{userId} {
      allow create: if isSignedIn();
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow list, delete: if isAdmin();
    }

    // Bookings Collection
    // - Authenticated users can create their own bookings.
    // - Users can only read their own bookings.
    // - Admins can read/write any booking.
    match /bookings/{bookingId} {
      allow create: if isSignedIn();
      allow read, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userID == resource.data.userID || isAdmin();
      allow list, delete: if isAdmin();
    }

    // Testimonials Collection
    // - Any user can read APPROVED testimonials (for public display).
    // - Authenticated users can create testimonials.
    // - Admins can manage all testimonials.
    match /testimonials/{testimonialId} {
      allow create: if isSignedIn();
      allow read: if resource.data.status == 'approved' || 
                    (request.auth.uid != null && (request.auth.uid == resource.data.userId || isAdmin()));
      allow list: if isAdmin();
      allow update, delete: if isAdmin();
    }

    // Contact Messages Collection
    // - Anyone can create (submit the contact form).
    // - Only admins can read/manage messages.
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, list, update, delete: if isAdmin();
    }
    
    // Lesson Materials Collection
    // - Only admins can create/manage materials.
    // - Authenticated users can read/list materials.
    match /lessonMaterials/{materialId} {
      allow create, update, delete: if isAdmin();
      allow read, list: if isSignedIn() || isAdmin();
    }

    // Chat Messages Collection
    // - Authenticated users can read and create messages.
    // - No one can update/delete messages for chat history integrity.
    match /chatMessages/{chatMessageId} {
      allow create, read, list: if isSignedIn();
      allow update, delete: if false; // Messages are immutable
    }

    // Fallback security: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
