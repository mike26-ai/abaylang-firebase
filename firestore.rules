
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      // Admins can read/write any user profile
      // A user can read/update their own profile
      allow read, update: if isAdmin() || isOwner(userId);
      // Anyone can create a user profile (for registration)
      allow create: if request.auth != null;
    }

    // Bookings Collection
    match /bookings/{bookingId} {
      // Admins can read/write any booking
      // A user can read their own bookings
      allow read: if isAdmin() || isOwner(resource.data.userID);
      // An authenticated user can create a booking for themselves
      allow create: if request.auth != null && request.resource.data.userID == request.auth.uid;
      // Admins can update any booking
      // A user can update their own booking (e.g., to cancel it)
      allow update: if isAdmin() || isOwner(resource.data.userID);
      // Only admins can delete bookings
      allow delete: if isAdmin();
    }

    // Testimonials Collection
    match /testimonials/{testimonialId} {
      // Anyone can read approved testimonials
      allow read: if resource.data.status == 'approved' || isAdmin();
      // Any authenticated user can create a testimonial
      allow create: if request.auth != null;
      // Only admins can update (approve/reject) or delete testimonials
      allow update, delete: if isAdmin();
    }

    // Contact Messages Collection
    match /contactMessages/{messageId} {
      // Anyone can create a contact message
      allow create: if true;
      // Only admins can read, update, or delete contact messages
      allow read, update, delete: if isAdmin();
    }
  }
}
