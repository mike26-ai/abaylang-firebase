rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read their own data and update specific feedback fields
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.keys().hasOnly(['showFirstLessonFeedbackPrompt', 'hasSubmittedFirstLessonFeedback', 'name', 'email', 'role', 'createdAt', 'photoURL', 'country', 'amharicLevel', 'nativeLanguage', 'uid']);
    }

    // Allow users to submit their own feedback
    match /internalFeedback/{feedbackId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Deny reads, updates, and deletes to keep feedback private
      allow read, update, delete: if false;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}