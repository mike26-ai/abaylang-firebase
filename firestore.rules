
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin role
    function isAdmin() {
      // Assumes you have a 'users' collection where roles are stored.
      // The admin's document ID is their UID, and it has a field `role` set to `admin`.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Default: Deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Users Collection:
    // - Anyone can create their own user profile on sign-up.
    // - Logged-in users can read/update their own profile.
    // - Admins can read any user's profile.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId || isAdmin();
      // No delete for users to prevent accidental data loss.
    }
    
    // Testimonials Collection:
    // - Logged-in users can create testimonials.
    // - Anyone (including public visitors) can read APPROVED testimonials.
    // - Admins can read, update, or delete any testimonial.
    match /testimonials/{testimonialId} {
      allow create: if request.auth != null;
      allow read: if resource.data.status == 'approved';
      allow update, delete: if isAdmin();
    }
    
    // Bookings Collection:
    // - Logged-in users can create bookings for themselves.
    // - Users can read their own bookings.
    // - Admins can read/update/delete any booking.
    match /bookings/{bookingId} {
      allow create: if request.auth != null && request.resource.data.userID == request.auth.uid;
      allow read, update: if (request.auth != null && get(/databases/$(database)/documents/bookings/$(bookingId)).data.userID == request.auth.uid) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Contact Messages Collection:
    // - Anyone can send a contact message.
    // - Only admins can read, update, or delete them.
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // Lesson Materials Collection:
    // - Only admins can add, update, or delete materials.
    // - All logged-in users (students) can read materials.
    match /lessonMaterials/{materialId} {
        allow read: if request.auth != null;
        allow write: if isAdmin(); // write is create, update, delete
    }

    // Chat Messages Collection:
    // - Logged-in users can read and write messages.
    // - Deletes are restricted for message history integrity.
    match /chatMessages/{messageId} {
      allow read, create: if request.auth != null;
      // No updates or deletes by users to preserve chat history. Admins could be granted this if needed.
    }
  }
}
