
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- COLLECTION RULES ---

    // --- Users Collection ---
    match /users/{userId} {
      // Admins have full access to user profiles.
      allow read, write: if isAdmin();
      
      // A user can read their own profile.
      allow read: if isOwner(userId);

      // A user can create their account.
      allow create: if isSignedIn();

      // A user can update ONLY the feedback flags on their own profile.
      allow update: if isOwner(userId)
                      && request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['showFirstLessonFeedbackPrompt', 'hasSubmittedFirstLessonFeedback']);
    }

    // --- Bookings Collection ---
    match /bookings/{bookingId} {
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(request.resource.data.userId) || isAdmin();
      allow read: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // --- Testimonials Collection ---
    match /testimonials/{testimonialId} {
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isAdmin();
      allow read: if isOwner(resource.data.userId) || resource.data.status == 'approved' || isAdmin();
    }

    // --- Contact Messages Collection ---
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // --- Internal Feedback Collection ---
    match /internalFeedback/{feedbackId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read, update, delete: if isAdmin(); // Admin can manage this feedback
    }

    // --- Blocked Slots Collection (NEW) ---
    match /blockedSlots/{slotId} {
      // Any authenticated user can read blocked slots to check availability.
      allow read: if isSignedIn();
      
      // Only admins can create or delete blocked slots.
      allow create, delete: if isAdmin();

      // Updates are disallowed to maintain data integrity. Delete and re-create instead.
      allow update: if false;
    }
  }
}
